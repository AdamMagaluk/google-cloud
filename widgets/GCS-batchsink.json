
{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Google Cloud Storage",
  "configuration-groups": [
    {
      "label" : "Governance",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        }
      ]
    },
    {
      "label" : "Service Account and Project Information",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Service Account File Path",
          "name": "serviceFilePath",
          "widget-attributes" : {
            "placeholder": "Path to the service account file on local file system"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Project ID",
          "name": "project",
          "widget-attributes" : {
            "placeholder": "The project id of the Cloud Storage bucket"
          }
        }
      ]
    },
    {
      "label": "File Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Base Path",
          "name": "path"
        },
        {
          "widget-type": "textbox",
          "label": "Path Suffix",
          "name": "suffix",
          "widget-attributes": {
            "default": "yyyy-MM-dd-HH-mm"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Bucket Name",
          "name": "bucket"
        },
        {
          "widget-type": "select",
          "label": "Format",
          "name": "format",
          "widget-attributes": {
            "values": [
              "avro",
              "csv",
              "delimited",
              "json",
              "parquet",
              "tsv"
            ],
            "default": "json"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Delimiter",
          "name": "delimiter",
          "widget-attributes": {
            "placeholder": "set if the format is 'delimited'"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ]
}
