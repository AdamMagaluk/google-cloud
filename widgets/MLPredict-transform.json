
{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Google Cloud ML Predict",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Model ID",
          "name": "model",
          "widget-attributes" : {
            "placeholder" : "Cloud ML Model ID"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Model Version",
          "name": "modelVersion",
          "widget-attributes" : {
            "placeholder" : "Cloud ML Model Version"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Instance Field",
          "name": "instancesfield",
          "widget-attributes" : {
            "placeholder" : "Field name to use as an input."
          }
        },
        {
          "widget-type": "textbox",
          "label": "Output Field",
          "name": "outputfield",
          "widget-attributes" : {
            "placeholder" : "Field name to use to store the output ML prediction API.",
            "default" : "prediction"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Predictions Field",
          "name": "predictionfield",
          "widget-attributes" : {
            "placeholder" : "The JSON field in the returned ML prediction to parse. Defaults to the root."
          }
        },
        {
          "widget-type": "textbox",
          "label": "Output Schema",
          "name": "schema",
          "widget-attributes" : {
          },
          "plugin-function": {
            "method": "POST",
            "label": "Get Schema",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "getSchema",
            "position": "bottom",
            "multiple-inputs": false,
            "button-class": "btn-hydrator"
          }
        }
      ]
    },
    {
      "label" : "Credentials",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Service Account File Path",
          "name": "serviceFilePath",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "map<string, string>"
        ],
        "schema-default-type": "string"
      }
    }
  ]
}
